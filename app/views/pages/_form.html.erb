<% if request.url.end_with? "/pages/new" %>
  <%= form_with(model: page, local: true, id: 'new_page') do |form| %>
    <% if page.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

        <ul>
        <% page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :slug %>
      <%= form.text_field :slug %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>

    <div class="actions">
      <%= form.submit 'Sauvegarder' %>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: page, local: true, id: 'edit_page_' + request.url[-6]) do |form| %>
    <% if page.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

        <ul>
        <% page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :slug %>
      <%= form.text_field :slug %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>

    <div class="actions">
      <%= form.submit 'Sauvegarder' %>
  <% end %>
<% end %>
