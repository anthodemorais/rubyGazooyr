<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= raw RedCloth.new(page.content).to_html%> %></td>
        <% if page.slug != nil %>
          <td><%= link_to 'Show', page_path(page.slug) %></td>
          <td><%= link_to 'Edit', edit_page_path(page.slug) %></td>
        <% else %>
          <td><%= link_to 'Show', page_path(page.id) %></td>
          <td><%= link_to 'Edit', edit_page_path(page.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
